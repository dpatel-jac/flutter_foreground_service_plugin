<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/caller_image"
        android:src="@drawable/ic_default_avatar"
        android:layout_width="@dimen/size_avatar"
        android:layout_height="@dimen/size_avatar"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/all_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:maxLines="1"
            android:textSize="@dimen/size_text_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content"
            android:maxLines="1"
            android:textSize="@dimen/size_text_name1" />

        <LinearLayout
            android:id="@+id/llDecline"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/all_padding"
            android:layout_height="@dimen/size_button"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_decline"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin_half"
                android:src="@drawable/hang_up"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvDecline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin_half"
                android:layout_marginRight="@dimen/base_margin_half"
                android:gravity="center"
                android:text="@string/text_hangup"
                android:textAllCaps="false"
                android:textSize="@dimen/size_text_action"
                android:textColor="@color/action_text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>