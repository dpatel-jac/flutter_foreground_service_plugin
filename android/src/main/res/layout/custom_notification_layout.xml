<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="top"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/caller_image"
            android:src="@drawable/ic_default_avatar"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/all_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:maxLines="1"
                android:textSize="@dimen/size_text_name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content"
                android:maxLines="1"
                android:textSize="@dimen/size_text_action" />

            <LinearLayout
                android:id="@+id/llDecline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_decline"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/all_padding2"
                android:layout_marginTop="@dimen/all_padding"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginLeft="@dimen/all_padding2"
                    android:src="@drawable/hang_up"
                    android:tint="@android:color/white" />

                <TextView
                    android:id="@+id/tvDecline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/all_padding"
                    android:gravity="center"
                    android:text="@string/text_hangup"
                    android:textAllCaps="false"
                    android:textSize="@dimen/size_text_action"
                    android:textColor="@color/action_text" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
